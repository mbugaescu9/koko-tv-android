<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center_horizontal"
            android:text="@string/please_login_or_signup"
            android:textColor="?attr/colorOnSurfaceVariant5"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/llSignInEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_signin_button"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/splash" />

            <TextView
                android:id="@+id/tvSignInEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/montserrat_regular"
                android:padding="4dp"
                android:text="@string/sign_in_with_email"
                android:textColor="?attr/colorOnSurfaceVariant6"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSignInGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_signin_button"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/sign_in_social_google" />

            <TextView
                android:id="@+id/tvSignInGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/montserrat_regular"
                android:padding="4dp"
                android:text="@string/sign_in_with_google"
                android:textColor="?attr/colorOnSurfaceVariant6"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSignInFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_signin_button"
            android:backgroundTint="?attr/colorSurfaceVariant17"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/sign_in_social_facebook" />

            <TextView
                android:id="@+id/tvSignInFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/montserrat_regular"
                android:padding="4dp"
                android:text="@string/sign_in_with_facebook"
                android:textColor="?attr/colorOnSurfaceVariant15"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
