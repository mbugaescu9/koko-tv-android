<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_dialog_background_rounded_corners"
        android:backgroundTint="?attr/colorSurfaceVariant5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="?attr/colorOnSurfaceVariant9"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/guideDoubleMargin"
            android:gravity="center"
            android:padding="18dp"
            android:textColor="?attr/colorOnSurfaceVariant9"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_regular" />

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:ems="10"
            android:inputType="text"
            android:textColor="?attr/colorOnSurfaceVariant9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="?attr/guideDoubleMargin">

            <Button
                android:id="@+id/okButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="?attr/guideDoubleMargin"
                android:layout_marginLeft="?attr/guideDoubleMargin"
                android:layout_marginEnd="?attr/guideDoubleMargin"
                android:layout_marginRight="?attr/guideDoubleMargin"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@android:string/ok"
                android:textColor="?attr/colorOnSurfaceVariant9"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="?attr/guideDoubleMargin"
                android:layout_marginLeft="?attr/guideDoubleMargin"
                android:layout_marginEnd="?attr/guideDoubleMargin"
                android:layout_marginRight="?attr/guideDoubleMargin"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@android:string/cancel"
                android:textColor="?attr/colorOnSurfaceVariant9"
                android:textSize="18sp"
                android:visibility="visible"
                android:fontFamily="@font/montserrat_regular" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>