<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:id="@+id/rootLayout"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/shape_poster_horizontal_placeholder"
            />

        <TextView
            android:id="@+id/tvPosterSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/black_70"
            android:gravity="end"
            android:ellipsize="start"
            android:singleLine="true"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="8sp" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvEpisodeNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:maxLines="1"
            android:gravity="start"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurfaceVariant9"
            android:text=""
            />
        <TextView
            android:id="@+id/tvEpisodeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:maxLines="1"
            android:gravity="start"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant11"
            android:text=""
            />
        <TextView
            android:id="@+id/tvEpisodeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lines="2"
            android:ellipsize="end"
            android:gravity="start"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurfaceVariant9"
            android:text=""
            />


    </LinearLayout>
</LinearLayout>