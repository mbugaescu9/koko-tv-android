<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:gravity="top|center_horizontal">
                <shape android:shape="rectangle">
                    <size android:width="60dp" android:height="5dp" />
                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="6dp" />
                    <solid android:color="@color/color_menu_item" />
                </shape>
            </item>
            <item>
                <ripple android:color="@color/color_menu_item">
                    <item android:id="@android:id/mask">
                        <shape android:shape="rectangle">
                            <solid android:color="#000000" />
                        </shape>
                    </item>
                </ripple>
            </item>
        </layer-list>
    </item>
    <item>
        <ripple android:color="@color/color_menu_item">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="#000000" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>